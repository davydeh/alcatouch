        {% block body %}{% endblock %}
            
        <script src="{{ asset('bundles/app/js/jquery.js') }}"></script>
        <script src="{{ asset('bundles/app/bootstrap/js/bootstrap.js') }}"></script>
        <script src="{{ asset('bundles/app/js/site.js') }}"></script>
        {% block javascripts %}{% endblock %}
        
    </body>
